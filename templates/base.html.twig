<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>
        {% block title %}PROSTAGES{% endblock %}
    </title>

    <!-- BLOC CSS -->
    {% block stylesheets %}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <link href="css/monCSS.css" rel="stylesheet">
    {% endblock %}
  </head>
  <body>
        <!-- CONTENEUR PRINCIPAL -->
        <div class="container">

            <!-- BLOC TITRE ET LOGO -->
            {% block titre %}
                <div class="row">
                    <a href="{{path('prostages_accueil')}}"><img src={{asset('img/logo_large.png')}} style="width:100%;" alt="logo ProStages"></a>
                </div>
            {% endblock %}

            <!-- BLOC MENU -->
            {% block menu %}
                <div class="row" style="background-color:#c9e265; border:2px solid #c9e265;">
                    <!-- BLOC MODULE ACCUEIL MENU -->
                    <div class="col-md-4 col-12" style="text-align:center;">
                        <a class="link" href="{{path('prostages_accueil')}}">Accueil</a>
                    </div>
                    <!-- BLOC MODULE ENTREPRISES MENU -->
                    <div class="col-md-4 col-12" style="text-align:center;">
                        <a class="link" href="{{path('prostages_entreprises')}}">Entreprises</a>
                    </div>
                    <!-- BLOC MODULE Formations MENU -->
                    <div class="col-md-4 col-12" style="text-align:center;">
                        <a class="link" href="{{path('prostages_formations')}}">Formations</a>
                    </div>
                </div>
            {% endblock %}

            <!-- BLOC CONTENU PAGE -->
            {% block contenu %}
                <div class="row">   
                </div>
            {% endblock %}

            <!-- BLOC FOOTER -->
            {% block footer %}
                    <div class="row">
                        <!-- BLOC COPYRIGHT -->
                        <div class="col-md-2 col-sm-5 col-3">
                                <p>©NonaLand</p>
                        </div>
                        <!-- BLOC RÉALISATION -->
                        <div class="col-md-10 col-sm-7 col-9" style="text-align:right;">
                                Réalisé avec <a href="https://symfony.com/">Symfony</a> et <a href="https://getbootstrap.com/">Bootstrap</a>
                        </div>
                    </div>
            {% endblock %} 
        </div>

        <!-- BLOC JS -->
        {% block javascripts %}
            <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
            <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
        {% endblock %}
  </body>
</html>