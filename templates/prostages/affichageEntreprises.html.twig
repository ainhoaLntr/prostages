{% extends 'base.html.twig' %}

{% block contenu %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1 style="text-align:center;">Nos entreprises partenaires</h1>
    <br>
    {% for entrepriseCourante in entreprises %}
        <a class="link" href="{{path('prostages_stagesParEntreprise', {'id': entrepriseCourante.id})}}">{{ entrepriseCourante.nom }}</a>
        <p>{{ entrepriseCourante.adresse }}</p>
        <br>
    {% endfor %}
</div>
{% endblock %}
